<p id="notice"><%= notice %></p>

<h1>Update Reminders</h1>

<table>
  <thead>
    <tr>
      <th>Type</th>
      <th>Proportion</th>
      <th>Start end</th>
      <th>Offset</th>
      <th>Day time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @update_reminders.each do |update_reminder| %>
      <tr>
        <td><%= update_reminder.type %></td>
        <td><%= update_reminder.proportion %></td>
        <td><%= update_reminder.start_end %></td>
        <td><%= update_reminder.offset %></td>
        <td><%= update_reminder.day_time %></td>
        <td><%= link_to 'Show', update_reminder %></td>
        <td><%= link_to 'Edit', edit_update_reminder_path(update_reminder) %></td>
        <td><%= link_to 'Destroy', update_reminder, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

