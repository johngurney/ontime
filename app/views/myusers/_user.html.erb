
<table align="left" style="background-color: lightblue; border-style: solid; border-width: 1px;" width="70%" height="50">
  <col width="25%">
  <col width="10%">
  <col width="10%">
  <col width="15%">
  <col width="10%">
  <col width="30%">
  <tr>
    <td align="left">
      Name

    </td>
    <td align="left">
      Team
    </td>
    <td align="left">
      Office
    </td>
    <td align="left">
      Position
    </td>
    <td align="left">
      Experience
    </td>
    <td align="left">
      Email
      <br>
      <br>
    </td>
  </tr>
  <tr>
    <td align="left">
    </td>

    <td align="left">
      <%= select_tag 'team', options_for_select(@myusers.select(:team).distinct.order(:team).collect{|u| [u.team, u.id]}) %>
    </td>

    <td align="left">
      <%= select_tag 'office', options_for_select(@myusers.select(:office).distinct.order(:office).collect{|u| [u.office, u.id]}) %>
    </td>

    <td align="left">
      <%= select_tag 'position', options_for_select(@myusers.select(:position).distinct.order(:position).collect{|u| [u.position, u.id]}) %>
    </td>

    <td align="left">
      <%= select_tag 'experience', options_for_select(@myusers.select(:experience).distinct.order(:experience).collect{|u| [u.experience, u.id]}) %>
    </td>

  </tr>

    <% @myusers.each do |myuser| %>
    <tr>
      <td align="left">
        <%= link_to myuser.first_name + " " + myuser.last_name, myuser_path(myuser) %>
      </td>
      <td align="left">
        <%= myuser.team %>
      </td>
      <td align="left">
        <%= myuser.office%>
      </td>
      <td align="left">
        <%= myuser.position %>
      </td>
      <td align="left">
        <%= myuser.experience %>
      </td>
      <td align="left">
        <%= myuser.email %>
      </td>
    </tr>
<% end %>

</table>
